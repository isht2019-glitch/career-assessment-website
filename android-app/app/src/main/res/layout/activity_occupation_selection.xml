<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".OccupationSelectionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Career Assessment Results"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Personality Type Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_personality_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Personality Type: Social"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_personality_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Helpful, caring, people-oriented individuals who enjoy helping others"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_aptitude_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aptitude Score: 75%"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- RIASEC Scores Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your RIASEC Scores"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <TextView
                        android:id="@+id/tv_realistic_score"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="R: 5"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:padding="4dp"
                        android:background="@drawable/spinner_background"
                        android:layout_margin="2dp" />

                    <TextView
                        android:id="@+id/tv_investigative_score"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="I: 3"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:padding="4dp"
                        android:background="@drawable/spinner_background"
                        android:layout_margin="2dp" />

                    <TextView
                        android:id="@+id/tv_artistic_score"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="A: 2"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:padding="4dp"
                        android:background="@drawable/spinner_background"
                        android:layout_margin="2dp" />

                    <TextView
                        android:id="@+id/tv_social_score"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="S: 8"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:padding="4dp"
                        android:background="@drawable/spinner_background"
                        android:layout_margin="2dp" />

                    <TextView
                        android:id="@+id/tv_enterprising_score"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="E: 4"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:padding="4dp"
                        android:background="@drawable/spinner_background"
                        android:layout_margin="2dp" />

                    <TextView
                        android:id="@+id/tv_conventional_score"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="C: 1"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:padding="4dp"
                        android:background="@drawable/spinner_background"
                        android:layout_margin="2dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Recommended Occupations Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recommended Occupations"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tap any occupation to view detailed career roadmap"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="12dp" />

                <ListView
                    android:id="@+id/list_occupations"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:divider="#E0E0E0"
                    android:dividerHeight="1dp"
                    android:choiceMode="singleChoice" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Restart Button -->
        <Button
            android:id="@+id/btn_restart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Take Test Again"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/spinner_background"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:padding="12dp" />

    </LinearLayout>

</ScrollView>
