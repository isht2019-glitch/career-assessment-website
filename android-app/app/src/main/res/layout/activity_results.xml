<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ‰ Test Results"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your career assessment is complete!"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/black_60" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Personality Type -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/tvPersonalityType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Personality Type: S"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_500"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvPersonalityDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Social - Helpful, caring, people-oriented"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Dominant Type"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_500"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvDominantType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Social"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvDominantDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Helpful, caring, people-oriented"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/black" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- RIASEC Scores -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RIASEC Personality Scores"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_500"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Realistic (R)"
                            android:textSize="16sp"
                            android:textColor="@color/black" />
                        <TextView
                            android:id="@+id/tvRealisticScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_500" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Investigative (I)"
                            android:textSize="16sp"
                            android:textColor="@color/black" />
                        <TextView
                            android:id="@+id/tvInvestigativeScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_500" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Artistic (A)"
                            android:textSize="16sp"
                            android:textColor="@color/black" />
                        <TextView
                            android:id="@+id/tvArtisticScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_500" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Social (S)"
                            android:textSize="16sp"
                            android:textColor="@color/black" />
                        <TextView
                            android:id="@+id/tvSocialScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_500" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Enterprising (E)"
                            android:textSize="16sp"
                            android:textColor="@color/black" />
                        <TextView
                            android:id="@+id/tvEnterprisingScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_500" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Conventional (C)"
                            android:textSize="16sp"
                            android:textColor="@color/black" />
                        <TextView
                            android:id="@+id/tvConventionalScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_500" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Aptitude Score -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aptitude Score"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_500"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvAptitudeScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/purple_500" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Career Recommendations -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recommended Careers"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_500"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvCareerRecommendations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Teacher, Counselor, Social Worker, Nurse, Therapist, Human Resources"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Select a Career for Detailed Roadmap:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_500"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp" />
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Get comprehensive education path, certifications, skills, timeline, and salary expectations"
                    android:textSize="13sp"
                    android:textColor="@color/black_60"
                    android:layout_marginBottom="12dp" />                  

                <Spinner
                    android:id="@+id/spinnerOccupations"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/spinner_background" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShowRoadmap"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ“š View Detailed Career Roadmap"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:cornerRadius="24dp"
                    app:icon="@android:drawable/ic_menu_info_details"
                    app:iconGravity="textStart" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Career Roadmap Display -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardRoadmapDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/tvRoadmapTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Career Roadmap"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_500"
                    android:layout_marginBottom="12dp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                    <TextView
                        android:id="@+id/tvRoadmapContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="4dp" />

                </ScrollView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Restart Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRestart"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Take Test Again"
            android:textSize="16sp"
            app:cornerRadius="28dp"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>
