<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".RoadmapDetailActivity">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/spinner_background"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="←"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@android:color/transparent"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/tv_occupation_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Software Engineer"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center" />

        <Button
            android:id="@+id/btn_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="⤴"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@android:color/transparent"
            android:layout_marginStart="12dp" />

    </LinearLayout>

    <!-- Loading Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tv_loading_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading comprehensive roadmap..."
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center" />

    </LinearLayout>

    <!-- Roadmap Content Section -->
    <ScrollView
        android:id="@+id/scroll_view_roadmap"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Career Roadmap"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tv_roadmap_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Roadmap content will appear here..."
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="4dp"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>

</LinearLayout>
