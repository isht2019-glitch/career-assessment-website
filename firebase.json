{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "android-app/**",
      "*.md"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/splash.html"
      },
      {
        "source": "/test",
        "destination": "/test.html"
      },
      {
        "source": "/payment",
        "destination": "/payment.html"
      },
      {
        "source": "/career-roadmap",
        "destination": "/career-roadmap.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      },
      {
        "source": "**/*.@(jpg|jpeg|gif|png|svg|webp)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      }
    ]
  }
}
